@model Atilim.Presentations.WebApplication.ViewModels.StudentViewModels.StudentIdentityViewModel

<h4>Student Identity</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-controller="Students" asp-action="UpdateStudentIdentity" method="post">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input asp-for="Id" class="form-control" type="hidden" />
            <input asp-for="StudentId" class="form-control" type="hidden" />
            <input asp-for="UserId" class="form-control" type="hidden" />

            <div class="form-group">
                <label asp-for="TCIdentificationNo" class="control-label"></label>
                <input asp-for="TCIdentificationNo" class="form-control" />
                <span asp-validation-for="TCIdentificationNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Surname" class="control-label"></label>
                <input asp-for="Surname" class="form-control" />
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CityOfBirth" class="control-label"></label>
                <input asp-for="CityOfBirth" class="form-control" />
                <span asp-validation-for="CityOfBirth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateOfBirth" class="control-label"></label>
                <input asp-for="DateOfBirth" class="form-control" />
                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>


@model CurriculumWithLessonViewModel
<h4>CurriculumViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Curriculums" asp-action="Insert" method="post">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="Id" class="form-control" />

            <div class="form-group mt-2">
                <label asp-for="CurriculumName" class="control-label"></label>
                <input asp-for="CurriculumName" class="form-control" />
                <span asp-validation-for="CurriculumName" class="text-danger"></span>
            </div>

            <ul class="list-group mt-2">
                @foreach (var lesson in Model.Lessons)
                {
                    <li class="list-group-item">
                        <input class="form-check-input me-1" type="checkbox" name="SelectedLessons" value="@lesson.Id" aria-label="...">
                        @lesson.LessonName
                    </li>
                }
            </ul>

            <div class="form-group mt-2">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

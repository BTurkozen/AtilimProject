@model CurriculumViewModel

<div class="row">
    <div class="col-md-12">
        <form asp-controller="Curriculums" asp-action="Update" method="post">
            <div class="col-md-4">
                <form asp-action="Insert">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" class="form-control" />

                    <div class="form-group mt-2">
                        <label asp-for="CurriculumName" class="control-label"></label>
                        <input asp-for="CurriculumName" class="form-control" />
                        <span asp-validation-for="CurriculumName" class="text-danger"></span>
                    </div>

                    <div class="form-group mt-2">
                        <input type="submit" value="Update" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </form>
    </div>
</div>